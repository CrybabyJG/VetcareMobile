<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/pieChartTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="16sp"
            android:text="Total de medicamentos vendidos en el mes de Diciembre"
            android:textAlignment="center"
            android:layout_marginBottom="10dp"/>


        <!-- Gráfico de Pastel -->
        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/pieChartMedicamentos"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginBottom="26dp" />

        <TextView
            android:id="@+id/barChartTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="16sp"
            android:text="Total de medicamentos adquiridos por clientes en el mes de Febrero"
            android:textAlignment="center"
            android:layout_marginBottom="10dp"/>

        <!-- Gráfico de Barras -->
        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/barChartClientesMedicamentos"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginBottom="24dp" />


        <TextView
            android:id="@+id/lineBarChartTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="16sp"
            android:text="Total de ganancias en venta por dia en el mes de noviembre"
            android:textAlignment="center"
            android:layout_marginBottom="10dp"/>

        <!-- Grafico de Lineas -->
        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/lineChartMedicamentosDia"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginBottom="24dp" />

    </LinearLayout>
</ScrollView>